[flake8]
max-line-length = 135
exclude = .git,__pycache__,.pytest_cache,.coverage,*.egg-info,build,dist

# Ignore specific rules
; ignore =
    ; E501,  ; Line too long
    ; F401,  ; Module imported but unused
    ; D107,  ; Missing docstring in __init__
    ; E203,  ; Whitespace before ':'
    ; E266,  ; Too many leading '#' for block comment
    ; W503,  ; Line break before binary operator
    ; F403,  ; 'from module import *' used; unable to detect undefined names
    ; B008,  ; Do not perform function calls in argument defaults
    ; ANN101,  ; Missing type annotation for self in method
    ; ANN201,  ; Missing return type annotation for public method
    ; RST304,  ; Unexpected indentation.
    ; RST305,  ; Unexpected indentation.
    ; RST301,  ; Unexpected indentation.
    ; D202,  ; No blank lines allowed after function docstring
    ; D203,  ; 1 blank line required before class docstring
    ; D204,  ; 1 blank line required after class docstring
    ; D205,  ; 1 blank line required after function docstring
    ; D400,  ; First line should end with a period
    ; D401,  ; First line should be in imperative mood
    ; D403,  ; First word of the first line should be properly capitalized
    ; D406,  ; Docstring should use triple double quotes
    ; D407,  ; Missing dashed underline after section header
    ; D408,  ; Section underline should be in the line following the section header
    ; D409,  ; Section underline should match the length of its header
    ; D410,  ; Section underline should be one of '=', '-', '~', '^', '"', or '*'
    ; D411,  ; Missing blank line after section
    ; D412,  ; No blank lines allowed between a section header and its content
    ; D413,  ; Missing blank line before section
    ; D414,  ; Section is over-indented
    ; D415,  ; Hanging indentation not consistent with other paragraphs in the same section
    ; D416,  ; Hanging indentation not consistent with other paragraphs in the same section
    ; D417,  ; Missing blank line after last section in docstring
    ; D418,  ; Section name should be properly capitalized
    ; D419   ; Unknown section name.
    ; E731,  ; Do not assign a lambda expression, use a definition
    ; B002,  ; Python 3.6 or higher is required
    ; E722,  ; Do not use bare 'except'
    ; S101,  ; Use of assert detected. The enclosed code will be removed when compiling to optimised byte code.
    ; S311,  ; Standard pseudo-random generators are not suitable for security/cryptographic purposes.
    ; S404,  ; Consider possible security implications associated with pickle module.
    ; S405,  ; Consider possible security implications associated with the use of eval()
    ; S603,  ; Use of insecure MD2, MD4, or MD5 hash function.
    ; S607,  ; Starting a process with a shell argument might be a security issue
    ; E231,  ; Missing whitespace after ','
    ; E241,  ; Multiple spaces after ','
    ; E242,  ; Tab after ','
    ; E251,  ; Unexpected spaces around keyword / parameter equals
    ; E252,  ; Missing whitespace around parameter equals
    ; E261,  ; At least two spaces before inline comment
    ; E262,  ; Inline comment should start with '# 'and a space
    ; E265,  ; Block comment should start with '# ' (not '#')
; per-file-ignores =
;     *tests/*.py:
;         D,  ; Docstring related errors
;         S101,  ; Use of assert detected. The enclosed code will be removed when compiling to optimised byte code.
;         S311,  ; Standard pseudo-random generators are not suitable for security/cryptographic purposes.
;         S404,  ; Consider possible security implications associated with pickle module.
